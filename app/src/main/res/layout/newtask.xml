<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="450dp"
    android:background="#0f0f1b">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="40dp"
        app:cardBackgroundColor="#F3ECDA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="50dp"
            android:layout_height="5dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center|top"
            android:background="@drawable/btnl"
            android:backgroundTint="#252644" />

        <TextView
            android:id="@+id/fecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Nueva tarea"
            android:textAlignment="center"
            android:textColor="#252644"
            android:textSize="20sp"
            android:textStyle="bold" />


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btnl"
            android:textAlignment="textStart"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/descriptionEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:hint="Tarea"
                android:textColor="#252644" />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btnl"
            android:textAlignment="textStart"
            android:layout_marginStart="20dp"
            android:layout_marginTop="140dp">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:hint="Descripcion"
                android:gravity="start"
                android:textAllCaps="false"
                android:textColor="#252644" />

        </com.google.android.material.textfield.TextInputLayout>

        <EditText
            android:id="@+id/fechaendselected"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="270dp"
            android:background="@color/Second"
            android:enabled="false"
            android:hint="Asignar fecha"
            android:textColor="#252644"
            android:textSize="18dp"
            android:textColorHint="#252644"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/selectend"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:layout_marginTop="270dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/ic_calendar" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="310dp"
            android:text="Importancia"
            android:textColor="#252644"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/importanceSpinner"
            android:layout_marginTop="330dp"
            android:layout_marginStart="25dp"
            android:layout_width="365dp"
            android:layout_height="35dp" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:layout_marginTop="370dp"
            android:layout_marginLeft="20dp"
            android:backgroundTint="#252644"
            android:text="Guardar"
            android:textSize="18dp"
            android:textColor="@color/Second" />


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>



